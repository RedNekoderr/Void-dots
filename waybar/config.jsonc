{
    "layer": "top",
    "position": "bottom",
    "width": 1050,
    "margin-bottom": 5,
    "modules-left": ["clock", "hyprland/workspaces", "custom/weather", "cava"],
    "modules-center": ["custom/playerctl"],
    "modules-right": ["custom/launcher", "tray", "network", "bluetooth", "hyprland/language", "backlight", "pulseaudio", "battery"],
    "hyprland/workspaces": {
      "format": "{icon}",
      "on-click": "activate",
      "on-scroll-up": "hyprctl dispatch workspace e+1",
      "on-scroll-down": "hyprctl dispatch workspace e-1",
      "format-icons": {
        "active": "ÔÜí",
        "default": "ÔÑå"
      },
      "active-only": false,
      "all-outputs": true
    },
    "clock": {
      "interval": 1,
      "timezone": "Europe/Moscow",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format": "<span size='14pt' font_weight='bold'>{:%H:%M:%S}</span>",
      "format-alt": "<span size='14pt' font_weight='bold'>{:%d/%m/%Y}</span>"
    },
    "tray": {
        "spacing": 10
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "üá∫üá∏",
        "format-ru": "üá∑üá∫"
    },
    "backlight": {
        "on-scroll-up": "brillo -A 10",
        "on-scroll-down": "light -U 10",
        "device": "eDP-1",
        "format": "{icon}",
        "format-icons": ["Û∞õ©", "Û±©é", "Û±©è", "Û±©ë", "Û±©í", "Û±©ì", "Û±©î", "Û±©ï", "Û∞õ®"],
        "tooltip-format": "{percent}%"
    },
    "network": {
        "format-wifi": "{icon}",
        "format-disconnected": "Û∞§≠",
        "tooltip-format": "{essid}",
        "on-click": "~/.config/waybar/scripts/network/rofi-network-manager.sh",
        "format-icons": ["Û∞§Ø","Û∞§ü","Û∞§¢","Û∞§•","Û∞§®"]
    },
    "pulseaudio": {
        "format": "{icon}{volume}",
        "format-muted": "Û∞∏à",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol &",
        "tooltip": true
    },
    "battery": {
        "interval": 60,
        "states": {
            "good": 75,
            "warning": 30,
            "critical": 15
        },
        "on-click": "poweralertd & pkill poweralertd",
        "format": "{icon}{capacity}",
        "format-full": "üö®",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },
    "custom/weather": {
      "exec": "python ~/.scripts/waybar-wttr.py",
      "restart-interval": 7200,
      "return-type": "json"
    },
    "custom/hyprpicker": {
        "format": "Û∞èò",
        "tooltip": false,
        "on-click": "exec hyprpicker | wl-copy &"
    },
    "bluetooth": {
        "format-off": "Û∞Ç≤",
        "format-on": "Û∞Ç±",
        "format-connected": "Û∞ÇØ",
        "tooltip": true,
        "tooltip-format": "{status}",
        "on-click": "exec blueman-manager &"
    },
   "custom/lock": {
       "tooltip" : false,
       "on-click": "sleep 0.5 && swaylock",
       "format" : "ÔÄ£"
    },
    "custom/power-menu": {
        "format": "ÔÄë",
        "on-click": "bash ~/.config/waybar/scripts/power-menu/powermenu.sh &",
        "tooltip": false
    }, 
    "custom/launcher": {
        "format": "ÔåÆ ",
        "on-click": "rofi -show drun &",
        "tooltip": false
    },
    "custom/playerctl": {
      "format": "<span>{}</span>",
      "return-type": "json",
      "max-length": 35,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} ~ {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click-middle": "playerctl play-pause",
      "on-click": "playerctl previous",
      "on-click-right": "playerctl next"
  }
}
